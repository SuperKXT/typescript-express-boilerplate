{
	"name": "typescript-express-boilerplate",
	"version": "1.0.0",
	"main": "build/src/app.js",
	"author": "Saad Khan",
	"license": "MIT",
	"scripts": {
		"start": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --require dotenv/config src/app.ts",
		"build": "rimraf ./build && tsc",
		"start:production": "node --require tsconfig-paths/register build/src/app.js",
		"lint": "eslint . --fix",
		"test": "jest --runInBand",
		"env:login": "dotenv-vault login -y",
		"env:push": "dotenv-vault push",
		"env:pull": "dotenv-vault pull && dotenv-vault pull example .env.example",
		"env:open": "dotenv-vault open -y"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dayjs": "^1.11.7",
		"dotenv": "^16.0.3",
		"eslint-plugin-jest": "^27.2.1",
		"express": "^4.18.2",
		"express-pino-logger": "^7.0.0",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^8.5.1",
		"mongoose": "^6.8.4",
		"pino": "^8.8.0",
		"zod": "^3.20.2"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/eslint": "^8.4.10",
		"@types/express": "^4.17.15",
		"@types/express-pino-logger": "^4.0.3",
		"@types/jest": "^28.1.8",
		"@types/jsonwebtoken": "^8.5.9",
		"@types/node": "^18.11.18",
		"@types/pino": "^7.0.5",
		"@typescript-eslint/eslint-plugin": "^5.48.2",
		"@typescript-eslint/parser": "^5.48.2",
		"eslint": "^8.32.0",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^28.1.3",
		"pino-pretty": "^9.1.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^28.0.8",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^4.9.4"
	}
}
