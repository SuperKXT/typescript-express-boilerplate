{
	"name": "typescript-express-boilerplate",
	"version": "1.0.0",
	"main": "build/src/app.js",
	"author": "Saad Khan",
	"license": "MIT",
	"scripts": {
		"start": "ts-node-dev --respawn --transpile-only --require tsconfig-paths/register --require dotenv/config src/app.ts",
		"build": "rimraf ./build && tsc",
		"start:production": "node --require tsconfig-paths/register build/src/app.js",
		"lint": "eslint . --fix",
		"test": "jest --runInBand",
		"env:login": "dotenv-vault login -y",
		"env:push": "dotenv-vault push",
		"env:pull": "dotenv-vault pull && dotenv-vault pull example .env.example",
		"env:open": "dotenv-vault open -y"
	},
	"dependencies": {
		"cors": "^2.8.5",
		"dayjs": "^1.11.7",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"helmet": "^6.0.1",
		"jsonwebtoken": "^9.0.0",
		"mongoose": "^7.0.0",
		"pino": "^8.11.0",
		"pino-http": "^8.3.3",
		"zod": "^3.20.6"
	},
	"devDependencies": {
		"@types/cors": "^2.8.13",
		"@types/eslint": "^8.21.1",
		"@types/express": "^4.17.17",
		"@types/jest": "^29.4.0",
		"@types/jsonwebtoken": "^9.0.1",
		"@types/node": "^18.14.2",
		"@typescript-eslint/eslint-plugin": "^5.54.0",
		"@typescript-eslint/parser": "^5.54.0",
		"eslint": "^8.35.0",
		"eslint-config-prettier": "^8.6.0",
		"eslint-import-resolver-typescript": "^3.5.3",
		"eslint-plugin-import": "^2.27.5",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-unused-imports": "^2.0.0",
		"jest": "^29.4.3",
		"pino-pretty": "^9.4.0",
		"prettier": "^2.8.4",
		"rimraf": "^4.1.2",
		"ts-jest": "^29.0.5",
		"ts-node-dev": "^2.0.0",
		"tsconfig-paths": "^4.1.2",
		"typescript": "^4.9.5"
	}
}
