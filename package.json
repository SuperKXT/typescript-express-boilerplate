{
	"name": "typescript-express-boilerplate",
	"version": "1.0.0",
	"author": "Saad Khan",
	"license": "MIT",
	"type": "module",
	"scripts": {
		"start": "tsx --watch --require dotenv/config src/app.ts",
		"build": "rimraf ./build && tsc -p tsconfig.build.json && tscpaths -p tsconfig.build.json -s ./src",
		"start:production": "node --experimental-specifier-resolution=node build/app.js",
		"lint": "eslint . --fix --report-unused-disable-directives && pnpm format",
		"format": "prettier --write .",
		"test": "vitest watch",
		"test-ui": "vitest --ui",
		"typecheck": "vitest typecheck",
		"env:login": "dotenv-vault login -y",
		"env:push": "dotenv-vault push",
		"env:pull": "dotenv-vault pull",
		"env:open": "dotenv-vault open -y",
		"keygen": "ssh-keygen -t rsa -b 4096 -m PEM -f .rsa.key && openssl rsa -in .rsa.key -pubout -outform PEM -out .rsa.key.pub"
	},
	"dependencies": {
		"@prisma/client": "^5.1.1",
		"@ts-rest/core": "^3.26.4",
		"@ts-rest/express": "^3.26.4",
		"cors": "^2.8.5",
		"dayjs": "^1.11.9",
		"express": "^4.18.2",
		"helmet": "^7.0.0",
		"jsonwebtoken": "^9.0.1",
		"pino": "^8.15.0",
		"pino-http": "^8.4.0",
		"zod": "^3.21.4"
	},
	"devDependencies": {
		"@total-typescript/ts-reset": "^0.4.2",
		"@types/cors": "^2.8.13",
		"@types/eslint": "^8.44.2",
		"@types/express": "^4.17.17",
		"@types/jsonwebtoken": "^9.0.2",
		"@types/node": "^20.4.8",
		"@typescript-eslint/eslint-plugin": "^6.2.1",
		"@typescript-eslint/parser": "^6.2.1",
		"@vitest/coverage-v8": "^0.34.1",
		"@vitest/ui": "^0.34.1",
		"dotenv": "^16.3.1",
		"dotenv-vault": "^1.25.0",
		"eslint": "^8.46.0",
		"eslint-config-prettier": "^9.0.0",
		"eslint-import-resolver-typescript": "^3.5.5",
		"eslint-plugin-import": "^2.28.0",
		"eslint-plugin-unused-imports": "^3.0.0",
		"eslint-plugin-vitest": "^0.2.8",
		"pino-pretty": "^10.2.0",
		"prettier": "^3.0.1",
		"prisma": "^5.1.1",
		"rimraf": "^5.0.1",
		"tscpaths": "^0.0.9",
		"tsx": "^3.12.7",
		"typescript": "^5.1.6",
		"vite-tsconfig-paths": "^4.2.0",
		"vitest": "^0.34.1"
	}
}
